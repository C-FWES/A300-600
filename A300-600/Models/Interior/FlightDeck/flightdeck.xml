    <path>Aircraft/A300-600/Models/Interior/FlightDeck/Seats/bigseat.xml</path>
    <offsets>
      <x-m>  0.101 </x-m>
      <y-m> -0.632 </y-m>
      <z-m>  0.524 </z-m>
    </offsets>
  </model>

  <!-- Copilot -->
  <model>
    <path>Aircraft/A300-600/Models/Interior/FlightDeck/Seats/bigseat.xml</path>
    <offsets>
      <x-m> 0.101 </x-m>
      <y-m> 0.632 </y-m>
