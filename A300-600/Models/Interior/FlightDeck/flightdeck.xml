    <offsets>
      <x-m>  1.246 </x-m>
      <y-m> -1.357 </y-m>
      <z-m>  0.594 </z-m>
    </offsets>
  </model>

  <model>
    <path>Aircraft/A300-600/Models/Interior/FlightDeck/Seats/littleseat.xml</path>
